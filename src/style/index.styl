@import url("https://fonts.googleapis.com/css?family=Hind:300,400,700")



a
  color inherit
  text-decoration none



html, body
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  background #161B1D
  color #fff
  font-family 'Hind', sans-serif
  font-weight 400
  height 100%
  margin 0
  padding 0
  width 100%


button, .button
  background none
  border none
  display inline-block
  height 48px
  width 48px
  line-height 44px
  margin 4px
  outline none
  cursor: pointer

  &.down
    &:before
      content: ""

  &.square
    border 2px solid currentColor

    &:hover
      background currentColor

      .material-icons
        color #161B1D !important
    

  .material-icons
    vertical-align middle

  &.red
    color #f50057

  &.purple
    color #673AB7



h1, h2, .headerlike
  font-weight 300
  letter-spacing: 0.3em
  line-height 1.15
  margin-top 3rem
  text-transform uppercase

h1
  font-size 32px

h2
  font-size 27px

  small
    color #455A64
    font-size 18px

p
  line-height 1.5



*
  box-sizing border-box


#app
  height 100%


.down
  height 25px
  position fixed
  bottom 2%
  left 50%
  margin-left -25px
  width 50px


section
  align-items center
  background 50% 50% no-repeat
  background-size cover
  background-attachment fixed
  display flex
  flex-direction column
  height 100vh
  justify-content center
  text-align center
  position relative
  overflow hidden

  > *
    max-width 600px

  .wide
    max-width none 

strong
  font-weight bold

.material-icons
  color inherit !important

.background
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background 50% 50% no-repeat
  background-size cover
  will-change: transform
  z-index -1


.center
  text-align center

.dim
  color #78909C

.emphasized
  font-size 1.5em
